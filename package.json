{
  "name": "crwn-clothing",
  "version": "0.1.0",
  "proxy": "http://localhost:5000",
  "private": true,
  "dependencies": {
    "firebase": "6.0.2",
    "node-sass": "4.12.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "7.0.3",
    "react-router-dom": "5.0.0",
    "react-stripe-checkout": "2.6.3",
    "redux": "4.0.1",
    "redux-logger": "3.0.6",
    "redux-persist": "5.10.0",
    "reselect": "4.0.0"
  },
  "devDependencies": {
    "react-scripts": "3.0.0"
  },
  "resolutions": {
    "babel-jest": "24.7.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "comma-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2,
          "maxBOF": 0,
          "maxEOF": 1
        }
      ],
      "no-trailing-spaces": [
        "error",
        {}
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "semi": [
        "error",
        "never"
      ],
      "react/jsx-closing-bracket-location": [
        "error",
        "line-aligned"
      ],
      "react/jsx-first-prop-new-line": [
        "error",
        "always"
      ],
      "react/jsx-max-props-per-line": [
        "error",
        {
          "maximum": 1
        }
      ],
      "react/jsx-tag-spacing": [
        "error",
        {
          "beforeClosing": "never"
        }
      ],
      "react/jsx-curly-spacing": [
        "error",
        {
          "when": "always",
          "children": true
        }
      ],
      "react/self-closing-comp": [
        "error",
        {
          "component": true,
          "html": true
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
